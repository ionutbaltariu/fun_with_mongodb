db.getCollection("comments").aggregate([
   { $group: { _id: "$channel", total_likes: { $sum: "$likes" } } },
])

db.getCollection("comments").aggregate([
    {   $lookup:
           {
             from: "channels",
             localField: "channel",
             foreignField: "_id",
             as: "ch"
           }
    },
   { $group: { _id: "$ch", total_likes: { $sum: "$likes" } } },
])
